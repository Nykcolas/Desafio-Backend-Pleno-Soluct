        "/api/v1/register": {
            "post": {
                "tags": [
                    "Usuário"
                ],
                "summary": "Registrar um novo usuário",
                "description": "Cria um novo perfil de usuário. A senha deve ter no mínimo 8 caracteres e ser enviada com um campo de confirmação.",
                "operationId": "e4b346be89db2a9380f0ea13147e9c27",
                "parameters": [
                    {
                        "name": "Accept",
                        "in": "header",
                        "description": "Define o tipo de conteúdo aceito na resposta.",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "default": "application/json"
                        }
                    }
                ],
                "requestBody": {
                    "description": "Dados do usuário para o registro.",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "name",
                                    "email",
                                    "password",
                                    "password_confirmation"
                                ],
                                "properties": {
                                    "name": {
                                        "description": "Nome completo do usuário.",
                                        "type": "string",
                                        "example": "João da Silva"
                                    },
                                    "email": {
                                        "description": "Endereço de e-mail do usuário.",
                                        "type": "string",
                                        "format": "email",
                                        "example": "joao@email.com"
                                    },
                                    "password": {
                                        "description": "Senha com no mínimo 8 caracteres.",
                                        "type": "string",
                                        "format": "password",
                                        "example": "senhaForte123"
                                    },
                                    "password_confirmation": {
                                        "description": "Confirmação da senha.",
                                        "type": "string",
                                        "format": "password",
                                        "example": "senhaForte123"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Usuário registrado com sucesso.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Usuário registrado com sucesso."
                                        },
                                        "data": {
                                            "properties": {
                                                "id": {
                                                    "type": "integer",
                                                    "example": 1
                                                },
                                                "name": {
                                                    "type": "string",
                                                    "example": "João da Silva"
                                                },
                                                "email": {
                                                    "type": "string",
                                                    "format": "email",
                                                    "example": "joao@email.com"
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Erro de validação nos dados enviados.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "The given data was invalid."
                                        },
                                        "errors": {
                                            "properties": {
                                                "email": {
                                                    "type": "array",
                                                    "items": {
                                                        "type": "string",
                                                        "example": "Este e-mail já está em uso."
                                                    }
                                                },
                                                "password": {
                                                    "type": "array",
                                                    "items": {
                                                        "type": "string",
                                                        "example": "A confirmação da senha não confere."
